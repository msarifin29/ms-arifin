---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProjectList from '../../components/ProjectList.astro';
import { projects } from './projects';

const title = 'Building in Public';
const description = 'A live portfolio of things I have built, including client work and passion-driven open source projects.';
---

<BaseLayout title={title} description={description}>
	<div class='container'>
		<div class='mb-10'>
			<h1 class='text-3xl font-bold mb-2'>{title}</h1>
			<p class='text-zinc-700 dark:text-zinc-300 text-lg mb-1'>{description}</p>
		</div>
		<ProjectList projects={projects} />
	</div>
</BaseLayout>
